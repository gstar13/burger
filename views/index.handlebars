<h1>TIME TO EAT DA BURGER!!</h1>
        <h2>Available burgers</h2>
<div class="row">
    <div class="center col-sm-6">
        <img src="./public/assets/img/burger.jpeg" alt="Eat-Da-Burger Time App">
        
        <p></p>
    </div>
</div>
<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <li>
        {{this.id}}
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button class="btn-primary" type="submit">Devour It!</button>
        </form>
    </li>
    {{/unless }}
    {{/each}}
</ul>
<div class="col-sm-6" id="devouredB">
<h2>DEVOURED BURGERS--THEY LOVED EM</h2>
<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <li>
        {{this.id}}
        {{this.burger_name}}
    </li>
    {{/if}}
    {{/each}}

</ul>
</div>
<h2>ENTER YOUR BURGER OF CHOICE</h2>
<form class="create-form" action="/" method="POST">

    <div class="form-group">
        <label for="burg">CLICK ADD BURGER TO ORDER NOW!</label>
        <input type="text" id="burg" name="burger_name">
         <button type="submit">Add BURGER</button>
    </div>

   

   
   
</form>